<div class="card">
    <div class="card-body">
        <h1 class="card-title"><%= post.title %></h1>
        <p class="card-text">
            <%= post.description %>
        </p>
        <a href="/posts/<%= post.slug %>" class="btn btn-primary">Read more</a>
        <a href="/posts/<%= post.slug %>/update" class="btn btn-outline-warning">Edit</a>
    </div>
</div>